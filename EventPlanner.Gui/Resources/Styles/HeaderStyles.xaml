<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Define reusable colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="OffBlack">#121212</Color>
    <Color x:Key="PrimaryBlueLight">#2196F3</Color>
    <Color x:Key="PrimaryBlueDark">#90CAF9</Color>
    <Color x:Key="TextDark">#1F2937</Color>
    <Color x:Key="TextLight">#FFFFFF</Color>
    <Color x:Key="TabBarUnselected">#666</Color>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.TabBarBackgroundColor" 
            Value="#F8EDEB" />
        <Setter Property="Shell.TabBarTitleColor" 
            Value="{StaticResource TextDark}" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="#FCD5CE"/>
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TabBarUnselected}"/>

    </Style>

</ResourceDictionary>
