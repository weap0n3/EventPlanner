<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventPlanner.Gui.MainPage"
             xmlns:viewmodels="clr-namespace:EventPlanner.Core.ViewModels;assembly=EventPlanner.Core"
             x:DataType="viewmodels:MainViewModel"
             xmlns:models="clr-namespace:EventPlanner.Data.Models;assembly=EventPlanner.Data"
             
             Title="Upcoming Events">
    <Grid RowDefinitions="*,*" Margin="20">
        <Grid RowDefinitions="Auto,*">
            <Label Text="Today:" FontFamily="Raleway" FontSize="Title"/>
            <CollectionView SelectionMode="Single" Grid.Row="1" ItemsSource="{Binding EventsToday}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Event">
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="2*,*,*" Padding="15">
                            <Label Text="{Binding Title}"/>
                            <Label Text="{Binding Description}" Grid.Row="1"/>
                            <Label Text="{Binding Date}" Grid.Column="1"/>
                            <Image Grid.Column="2"  Source="details.png" HeightRequest="20"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <Grid Grid.Row="1" RowDefinitions="Auto,*">
            <Label Text="Upcoming: " FontFamily="Raleway" FontSize="Title"/>
            <CollectionView SelectionMode="Single" Grid.Row="1" ItemsSource="{Binding EventsUpcoming}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Event">
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="2*,*,*" Padding="15">
                            <Label Text="{Binding Title}"/>
                            <Label Text="{Binding Description}" Grid.Row="1"/>
                            <Label Text="{Binding Date}" Grid.Column="1" />
                            <Image Grid.Column="2"  Source="details.png" HeightRequest="20"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>
